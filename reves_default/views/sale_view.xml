<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- mostrar los diarios en las facturas para los integrantes del grupo group_reves_sales_users -->



        <!-- agrega una condición para que los integrantes del grupo group_reves_sales_users y
        group_reves_stock_users no puedan editar el precio en la orden de venta-->

        <record id="view_order_form_readonly_price_reves" model="ir.ui.view">
            <field name="name">sale.order.form.readonly.reves</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_reves_sales_users'),
                                                   ref('group_reves_stock_users')  ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <!--
        - agrega una condición para que los integrantes del grupo group_reves_sales_users y
          group_reves_stock_users  no puedan editar el precio en la factura
        -->

        <record id="account_invoice_form_readonly_price_reves" model="ir.ui.view">
            <field name="name">invoice.order.form.readonly.reves</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_reves_sales_users'),
                                                   ref('group_reves_stock_users')  ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- permite que los usuarios del grupo group_reves_sales_users vean los diarios para poder
             seleccionar el punto de venta
        -->
        <record id="account_invoice_form_show_diary_reves" model="ir.ui.view">
            <field name="name">invoice.order.form.readonly.reves</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name='type'>form</field>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="groups">reves_default.group_reves_sales_users</attribute>
                </xpath>

            </field>
        </record>

        <!-- ocultar el menu Contabilidad / Proveedores para los usuarios que no son administradores -->

        <record model="ir.ui.menu" id="account.menu_finance_payables">
            <field name="groups_id" eval="[(6,0,[ref('group_reves_admin_users')])]"/>
        </record>


    </data>
</openerp>